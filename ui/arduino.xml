<style-scheme id="arduino" _name="Arduino" version="1.0">
  <author>Pascal de Bruijn</author>
  <_description>Arduino color scheme</_description>

  <!-- The scheme tries to look like the default Arduino IDE scheme -->

  <!-- Palette -->
  <color name="blue"       value="#006699"/>
  <color name="red"        value="#993333"/>
  <color name="orange"     value="#cc6600"/>
  <color name="yellow"     value="#f8c600"/>
  <color name="white"      value="#ffffff"/>
  <color name="grey"       value="#7e7e7e"/>
  <color name="black"      value="#000000"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="#white" background="#grey" bold="true"/>
  <style name="bracket-mismatch"            foreground="#white" background="#red" bold="true"/>

  <!-- Search Matching -->
  <style name="search-match"                background="yellow"/>  
  
  <!-- Comments -->
  <style name="def:comment"                 foreground="grey"/>
  <style name="def:shebang"                 foreground="grey" bold="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="blue"/>
  <style name="def:special-char"            foreground="blue"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="orange"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="orange"/>

  <!-- Types -->
  <style name="def:type"                    foreground="orange"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="black"/>

</style-scheme>
